<h1>Campaigns</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @company.campaigns.each do |campaign| %>
      <tr>
        <td><%= campaign.name %></td>
        <td><%= campaign.start_date %></td>
        <td><%= campaign.end_date %></td>
        <td><%= link_to 'Show', company_campaign_path(@company, campaign) %>
        <td><%= link_to 'Edit', edit_company_campaign_path(@company, campaign) %></td>
        <td><%= link_to 'Destroy', company_campaign_path(@company, campaign), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Campaign', new_company_campaign_path(@company, @company.campaigns.build) %>
